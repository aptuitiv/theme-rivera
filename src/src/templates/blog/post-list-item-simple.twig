{% import 'macros/macros' as macros %}

{% set link = ' <div><a href="' ~ post.url ~ '" class="inline-flex align-center">Read more' ~ macros.iconAriaHidden("chevron-thin-right") ~ '</a></div>' %}
<h2><a href="{{ post.url }}" class="link-subtle">{{ post.postTitle }}</a></h2>
<div class="flex align-center mb-1">{{ macros.iconAriaHidden('calendar') }} <span>&nbsp;{{ post.publishedOnDate }}</span></div>
{% if post.abstract %}
    {{ post.abstract|inject_html(link) }}
{% else %}
    {{ post.content|striptags|truncate(400)|inject_html(link) }}
{% endif %}
